<Window x:Class="Pomodoro.CustomizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro"
        mc:Ignorable="d"
        Title="Customization Options" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <ImageBrush x:Name="BackgroundImageBrush"></ImageBrush>
        </Grid.Background>
        <Button x:Name="ButtonEmulatorButton" Width="140" VerticalAlignment="Top" Margin="10,10,0,0" HorizontalAlignment="Left" Content="Button" Height="42" Background="{x:Null}"/>
        <Button x:Name="ImageSelectionButton" Margin="320,10,10,0" VerticalAlignment="Top" Height="27" Click="ImageSelectionButton_Click" Content="Select Background Image"/>
    </Grid>
</Window>
